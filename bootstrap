#!/bin/sh

set -euo pipefail
# Processing
while true
do
  HEADERS="$(mktemp)"
  # Get an event
  EVENT_DATA=$(curl -sS -LD "$HEADERS" -X GET "http://${AWS_LAMBDA_RUNTIME_API}/2018-06-01/runtime/invocation/next")
  REQUEST_ID=$(grep -Fi Lambda-Runtime-Aws-Request-Id "$HEADERS" | tr -d '[:space:]' | cut -d: -f2)
  
  #JSON_STRING=$( jq -n \
  #                --arg ed "$EVENT_DATA" \
  #                --arg ri "$REQUEST_ID" \
   #               '{EVENT_DATA: $ed, REQUEST_ID: $ri}' )


                    
  TMP_JSON="$(mktemp)"                
  echo   $EVENT_DATA > $TMP_JSON    
  /opt/R/bin/Rscript  /opt/runtime.r "$TMP_JSON" "$REQUEST_ID"
 
done
